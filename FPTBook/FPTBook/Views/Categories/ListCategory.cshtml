@model IEnumerable<FPTBook.Models.Category>

@{
	ViewData["Title"] = "Request New Category";
}
<div class="" style="display:flex; flex-direction-row; gap:60px; margin: 0 0 0 0">
	<partial name="_DashboardPartial" />
	<div class="" style="">
		<div style="margin-top:20px">
			<div style="max-width:700px; display:flex;gap:4px;">
				<form action="Categories" method="get" class="" style="display:flex; width:100%;">
					<input type="search" class="form-control rounded" name="search" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
					<button type="submit" class="btn btn-outline-primary" data-mdb-ripple-init>search</button>
				</form>

			</div>
			<div style="display:flex; gap:20px; margin-top:20px">
				<p>
					<a asp-action="RequestNewCategory">Request New Category</a>
				</p>
				<p>
					<a class="btn btn-success" asp-action="Index">Refresh List</a>
				</p>
			</div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Name)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Description)
					</th>
					<th>
						@Html.DisplayNameFor(model=>model.IsRequest)
					</th>
					<th>

					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Description)
						</td>
						<td>
							@Html.DisplayFor(modelItem=>item.IsRequest)
						</td>
						<td>
							<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

