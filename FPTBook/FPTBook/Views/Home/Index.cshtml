

@model IEnumerable<FPTBook.Models.Book>
@{
	ViewData["Title"] = "Home Page";
}
<div class="container">
	<form action="" method="get" class="input-group">
		<input type="search" class="form-control rounded" name="search" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
		<button type="submit" class="btn btn-outline-primary" data-mdb-ripple-init>search</button>
	</form>
	<section class=" mt-5 w-100">
		<div class="row">
			<div class="" style="max-width:250px; ">

				<ul style="display:grid; grid-template-columns:auto ;list-style:none; background-color:ThreeDDarkShadow; margin:0; padding:0; gap:4px;padding:10px; border-radius:15px">
					@foreach (var item in ViewBag.Category)
					{
						<li class="category-item">
							<a asp-area="" asp-controller="Home" asp-action="Index" style="width:100%;display:block" asp-route-id="@item.Id">@item.Name</a>
						</li>
					}
				</ul>
			</div>

			<div class="row" style="width:1000px">
			@foreach (var item in Model)
			{


				<div class="col-lg-4 mb-4" style="border-radius:15px; padding:10px;height:650px">
					<div class="card" style="height:650px">
						<img decoding="async" src="@("~/Image/" + item.ImageName)" asp-append-version="true" class="card-img-top" style="padding:5px;height:400px" alt="Book 1">
						<div class="card-body" style="display:flex;flex-direction:column">
							<h5 class="card-title">@item.Title</h5>
								<p class="card-text">@(item.Description.Length>20?item.Description.Substring(0,20):item.Description)</p>
								<p class="card-text">@item.Price.ToString("N0")</p>
							<a asp-controller="Orders" asp-action="Checkout" asp-route-bookId="@item.Id" class="btn btn-primary" style="margin-bottom:4px;margin-top:auto">Add To Cart</a>
						</div>

					</div>
				</div>
			}
			</div>
			<div style="display:flex;width:100%;justify-content:center ">
				<div class="" style=" width:fit-content; padding:5px 10px 5px 10px; background-color:ThreeDDarkShadow; border-radius:10px">
					@for (int i = 1; i <= ViewBag.MaxPage; i++)
					{
						<a href="?page=@i" style="padding:5px" class="page-item">@i</a>
					}
				</div>
				
			</div>
		</div>
		<!-- Repeat the above card structure for each book -->
		<!-- Example for a second book -->
	</section>
</div>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>