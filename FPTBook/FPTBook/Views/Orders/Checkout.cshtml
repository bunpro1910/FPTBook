@model FPTBook.Models.CartItem

@{
	ViewData["Title"] = "Index";
}
@{
	int quantity = 1;
}
<div class="container">
	<div class="row m-0">
		<div class="col-lg-7 pb-5 pe-lg-5">
			<div class="row">
				<div class="col-12 p-5">
					<img decoding="async" src="@("~/Image/" + ViewBag.book.ImageName)" asp-append-version="true" alt="ImageBook" style="max-width:500px" />
				</div>
				<div class="row m-0 bg-light">
					<div class="col-md-4 col-6 ps-30 pe-0 my-4">
						<p class="text-muted">Category</p>
						<p class="h5">@ViewBag.book.Category.Name<span class="ps-1"></span></p>
					</div>
					<div class="col-md-4 col-6  ps-30 my-4">
						<p class="text-muted">Publisher</p>
						<p class="h5 m-0">@ViewBag.book.Publisher.Name</p>
					</div>
					<div class="col-md-4 col-6 ps-30 my-4">
						<p class="text-muted">Author</p>
						<p class="h5 m-0">@ViewBag.book.Author</p>
					</div>
					<div class="col-md-12 col ps-30 my-4">
						<p class="text-muted">Description</p>
						<p class="h5 m-0">@ViewBag.book.Description </p>
					</div>
					
				</div>
			</div>
		</div>
		<div class="col-lg-5 p-0 ps-lg-4">
			<div class="row m-0">
				<div class="col-12 px-4">
					<div class="d-flex align-items-end mt-4 mb-2">
						<p class="h4 m-0">
							<span class="pe-1"> @ViewBag.book.Title</span>
						</p>
							
					</div>
					<form method="get" asp-action="AddCart">
						<input type="hidden" asp-for="BookID" value="@ViewBag.book.Id" />
						<div class="d-flex justify-content-between mb-2">
							<p class="textmuted">Qty</p>
							<div class="form-group" style="margin-left:auto;margin-right:0">
								<input class="form-control " type="number" asp-for="quantity" style="width:80px" onchange="Edit()" value="1" min="1" id="InputTotal" />
								
							</div>

						</div>
						<div class="d-flex justify-content-between mb-2">
							<p class="textmuted">Price</p>
							<p class="fs-14 fw-bold"><span class="fas fa-dollar-sign pe-1"> @(ViewBag.book.Price) &#8363</span></p>
						</div>
						<div class="d-flex justify-content-between mb-2">
							<p class="textmuted">Shipping</p>
							<p class="fs-14 fw-bold">Free</p>
						</div>

						<div class="d-flex justify-content-between mb-3">
							<p class="textmuted fw-bold">Total</p>
							<div class="d-flex align-text-top ">
								<span class="fas fa-dollar-sign mt-1 pe-1 fs-14 "></span><span class="h4 totalprice" id="Total"> @(ViewBag.book.Price * quantity) &#8363</span>
							</div>
						</div>

						
						<div>
							<input type="submit" class="btn btn-primary" value="Add Cart" />
						</div>
					</form>
				</div>


			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	document.onload = function () {
		
	};
	function Edit() {
		var x = document.getElementById("InputTotal").value;
		document.getElementById("Total").innerHTML = x * @ViewBag.book.Price
	}
	

</script>





</script>