@model FPTBook.Models.Order

@{
	ViewData["Title"] = "Index";
}
@{
	int quantity = 1;
}
<div class="container mt-5">
    
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>
                <span class="badge badge-secondary badge-pill">3</span>
            </h4>
            <ul class="list-group mb-3 sticky-top">
                @foreach (var item in ViewBag.Cart)
                {
                    @foreach (var item1 in item.CartItems)
                    {
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <img decoding="async" src="@("~/Image/" + item1.Book.ImageName)" asp-append-version="true" alt="ImageBook" style="max-height:50;max-width:50px" />
                                <div>
                                    <h6 class="my-0">@item1.Book.Title</h6>
                                    <small class="text-muted">@item1.Book.Category.Name</small><br/>
                                    <small class="text-muted">Quantity : @item1.quantity</small>
                                </div>
                            </div>
                            <span class="text-muted">@(item1.Book.Price * item1.quantity) &#8363</span>
                        </li>
                    }
                  
                }
             
            </ul>
       
        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Billing address</h4>
            <form class="" action="Checkout" method="post">
               
                <div class="mb-3">
                    <label for="">Address </label>
                    <input type="text" class="form-control" asp-for="Address" placeholder="Enter your Address" required>
                  
                </div>
                <div class="mb-3">
                    <label >Phone</label>
                    <input type="text" class="form-control" asp-for="Phone" placeholder="Enter Your Phone Number" required="">
                </div>
                
                
                
                <hr class="mb-4">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to checkout</button>
            </form>
        </div>
    </div>
    <footer class="my-5 pt-5 text-muted text-center text-small">
        <p class="mb-1">© 2017-2019 Company Name</p>
        <ul class="list-inline">
            <li class="list-inline-item"><a href="#">Privacy</a></li>
            <li class="list-inline-item"><a href="#">Terms</a></li>
            <li class="list-inline-item"><a href="#">Support</a></li>
        </ul>
    </footer>
</div>